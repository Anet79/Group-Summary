<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        app:cardBackgroundColor="@color/bar3"
        android:elevation="7dp"


        app:cardCornerRadius="18dp"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"

            android:orientation="horizontal"

            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/list_file_IMG_icon"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_pdf"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:paddingEnd="160dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/list_file_LBL_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="File Name"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/list_file_LBL_created_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="9/7/2022"
                    android:textColor="#020202"
                    android:textSize="10sp" />


            </LinearLayout>

<!--            <com.google.android.material.button.MaterialButton-->
<!--                android:id="@+id/group_BTN_right"-->
<!--                style="@style/Widget.Material3.Button.IconButton"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:paddingTop="7dp"-->
<!--                android:background=""-->
<!--                app:icon="@drawable/ic_three_dots"-->
<!--                app:iconTint="@color/black"-->


<!--                />-->


        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>



</RelativeLayout>
